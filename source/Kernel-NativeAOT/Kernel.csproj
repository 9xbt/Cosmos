<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net5.0</TargetFramework>
        <RuntimeIdentifiers>win-x64;osx-x64;linux-x64</RuntimeIdentifiers>
        <LangVersion>latest</LangVersion>
        <Platforms>x64</Platforms>
        <Configurations>Debug;Release</Configurations>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Optimize Condition="'$(Configuration)'=='Release'">true</Optimize>
        <EnableDefaultItems>false</EnableDefaultItems>

        <NoExplicitReferenceToStdLib>true</NoExplicitReferenceToStdLib>

        <NoStdLib>true</NoStdLib>
        <NoConfig>true</NoConfig>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <RuntimeMetadataVersion>v4.0.30319</RuntimeMetadataVersion>
        <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>

        <AssemblyName>Kernel</AssemblyName>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Platform)' == 'x64'">
        <Prefer32Bit>false</Prefer32Bit>
        <DefineConstants>TARGET_64BIT;TARGET_AMD64;BIT64;$(DefineConstants)</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="asm\**\*.*">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <Content Include="Makefile">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <Content Include="scripts\**\*.*">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <Compile Include="*cs" />
    </ItemGroup>

    <ItemGroup>
      <Compile Include="Core\EEType.cs" />
      <Compile Include="Core\Runtime.cs" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.DotNet.ILCompiler" Version="6.0.0-preview.7.21355.1" />
    </ItemGroup>

    <Target Name="CustomizeReferences" BeforeTargets="BeforeCompile" AfterTargets="FindReferenceAssembliesForReferences">
        <ItemGroup>
            <ReferencePathWithRefAssemblies Remove="@(ReferencePathWithRefAssemblies)" />
            <ReferencePath Remove="@(ReferencePath)" />
        </ItemGroup>
    </Target>

</Project>
